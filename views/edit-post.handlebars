<div class="card" style ="padding-top: 5px; margin-left: 5px;">
    <h3 class="card-header" style = "font-size: 20px; color:#0e012c; margin-left: 5px;">Edit Post</h3>
    <form class="card-body edit-post-form" style ="padding-top: 5px; margin-left: 5px;">
        <label for="post-title" class="form-label">Title</label>
        <input id="post-title" type="text" value="{{post.title}}" class="form-input" />
        <label class="form-label" for="content">Content</label>
        <input id="content" type="text" value="{{post.content}}" class="textarea" style = "width: 70%"/>
       <div class="buttons">
        <button type="submit" class="button is-success">Update Post</button>
        <button type="button" class="button is-success delete-post-btn">Delete Post</button>
        </div>
    </form>
</div>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>

